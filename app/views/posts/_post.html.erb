<% posts.each do |post| %>
    <div class="post">
        <div class="post__top">
            <div class="post__top--left">
                <i class="fa-solid fa-image-portrait"></i>
                <h5><a href="#" class="title-link"><%= post.id %></a></h5>
            </div>
            <div class="post__top--right">
                <a href="#" class="icon edit"><i class="fa-solid fa-pen"></i> Edit</a> | 
                <a href="#" class="icon delete"><i class="fa-solid fa-trash"></i> Delete</a> 
            </div>
        </div>

        <div class="post__middle">
            <h3 class="post__top--title"><%= post.title %></h3>
            <p class="post__top--body"><%= post.body %></p>
        </div>

        <div class="post__bottom">
            <div class="post__bottom--right">
                <div class="right__icon">
                    <button type="button" id="commentBtnjs_<%= post.id %>" data-id="<%= post.id %>" class="icon comment">
                        <i class="fa-solid fa-comment"></i> Comments
                    </button>
                </div>
                <div class="right__icon">
                    <button type="button" id="likeBtnjs" class="icon like">
                        <i class="fa-solid fa-heart"></i> Like
                    </button>
                </div>
                <div class="right__icon">
                    <button type="button" class="icon share">
                        <i class="fa-solid fa-share"></i> Share
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="commentsContainerjs" class="comments active">
        <%= render partial: 'comment', locals: { comments: post.comments } %>
    </div>  
<% end %>